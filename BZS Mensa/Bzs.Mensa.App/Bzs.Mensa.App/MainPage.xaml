<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bzs.Mensa.App.MainPage"
             Title="Übersicht">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Benutzer"
                     Command="{Binding BenutzerEinstellungenCommand}"
                     Order="Primary"
                     Priority="0"/>
    </ContentPage.ToolbarItems>

    <StackLayout Margin="20">
        <ListView ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Button Text="Abmelden" Command="{Binding AbmeldenCommand}"/>
                        <Label Text="{Binding Datum}" Detail="{Binding MenuBeschreibung}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextAlignment="Center"/>
                        <Button Text="Anmelden" Command="{Binding AnmeldenCommand}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>