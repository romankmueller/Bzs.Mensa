<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bzs.Mensa.App.MainPage"
             Title="Übersicht">

    <StackLayout Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="Woche 1" VerticalTextAlignment="Center"/>
                <Button Text="Benutzer" Grid.Column="1" Command="{Binding BenutzerEinstellungenCommand, Mode=OneWay}" />
            </Grid>
            <Button Text="Essen1" Grid.Row="1" Clicked="Button_Clicked_2" />
            <Label Grid.Row="2" Text="Zeile 3"/>
        </Grid>
    </StackLayout>

</ContentPage>
