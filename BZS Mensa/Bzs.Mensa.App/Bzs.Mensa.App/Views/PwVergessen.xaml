<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bzs.Mensa.App.Views.PwVergessen"
             Title="Passwort Vergessen">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Entry Grid.Row="0" Text="{Binding Email, Mode=TwoWay}" Placeholder="Email" />
                <Button Grid.Row="1" Command="{Binding SendenCommand, Mode=OneWay}" Text="Senden" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>