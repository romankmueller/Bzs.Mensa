<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bzs.Mensa.App.Views.NeuesPw">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Entry Placeholder="Email" Text="{Binding Email, Mode=TwoWay}" Grid.Row="1"/>
                <Entry Placeholder="Token" Text="{Binding Token, Mode=TwoWay}" Grid.Row="2"/>
                <Entry Placeholder="Neues Passwort" Text="{Binding Passwort1, Mode=TwoWay}" Grid.Row="3" IsPassword="True"/>
                <Entry Placeholder="Passwort bestätigen" Text="{Binding Passwort2, Mode=TwoWay}" Grid.Row="4" IsPassword="True"/>
                <Button Command="{Binding PasswortAendern}" Text="Senden"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>